
    <section class="hero">
      <div class="container mx-auto flex items-center justify-between">
        <div class="w-1/2 ml-12">
          <h6 class="text-lg">Feeling Hunger?</h6>
          <h1 class="text-4xl text-bold">Don't Wait just Order!</h1>
          <button
            class="px-6 py-2 rounded-full text-white font-bold mt-4 btn-primary"
          >
            Order Now!
          </button>
        </div>
        <div class="w-1/2">
          <img src="/img//pizza.png" />
        </div>
      </div>
    </section>

    <section class="menu">
      <h1 class="text-2xl text-bold ml-12 py-4">Pizza Categories!</h1>
      <div class="grid grid-cols-4 col-gap-12 row-gap-8">

        <% menu.forEach((menu)=>{ %>
          
        <div class="w-64">
          <img src="/img/<%= menu.image %>" class="h-40 mb-4 mx-auto" />
          <div class="text-center">
            <h2 class="mb-4 text-lg"><%= menu.name %></h2>
            <span class="size py-1 px-4 rounded-full uppercase text-xs"
              ><%= menu.size %></span
            >
            <div class="flex items-center justify-around mt-4">
              <span class="font-bold text-lg">$<%= menu.price %></span>
              <button data-menu = "<%= JSON.stringify(menu)%>" class="add-to-cart rounded-full py-1 px-6 flex items-center font-bold">
                <span>+</span>
                <span class="ml-4">Add</span>
              </button>
            </div>
          </div>
        </div>
      <% }) %>
      </div>
    </section>

    <script src="/js/app.js"></script>
  </body>
</html>
