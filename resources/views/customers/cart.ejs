<section class="cart py-4">
  <% if(session.cart) { %>
  <div class="order container mx-auto w-1/2">
    <div class="flex items-center border-b border-gray-300 pb-2">
      <img class="w-12" src="/img/cart_small.png" alt="" />
      <h1 class="font-bold ml-2 text-2xl">Order Summery!</h1>
    </div>
    <div class="pizza-list">
      <!-- ////////////////////////////////////////////// -->
      <% for(let pizza of Object.values(session.cart.items)) { %>
      <div class="flex items-center mt-4">
        <img class="w-24" src="/img/<%= pizza.item.image %>" alt="" />
        <div class="flex-1 ml-4">
          <h1 class="font-bold text-xl"><%= pizza.item.name %></h1>
          <span class="uppercase text-sm"><%= pizza.item.size %></span>
        </div>
        <span class="flex-1"><%= pizza.qty %> Pcs</span>
        <span class="font-bold text-lg"
          >$<%= pizza.item.price * pizza.qty %></span
        >
      </div>
      <!-- /////////////////////////////////////////////// -->
      <% } %>
      <hr />
      <div class="text-right py-4">
        <div>
          <span class="font-bold text-lg">Total Amount:</span>
          <span class="amount text-2xl font-bold ml-2"
            >$<%= session.cart.totalPrice %></span
          >
        </div>
        <div>
          <form action="" class="mt-4">
            <input
              class="border border-gray-400 mb-2 p-2 w-1/2"
              type="text"
              placeholder="Phone Number"
            />
            <input
              class="border border-gray-400 p-2 w-1/2"
              type="text"
              placeholder="Add Address"
            />
            <div>
              <!-- <button
                        type="submit"
                        class="px-6 py-2 rounded-full text-white font-bold mt-4 btn-primary"
                    >
                        Order Now
                    </button> -->
            </div>
          </form>
        </div>
        <a
          href="login"
          class="inline-block cursor-pointer px-6 py-2 rounded-full text-white font-bold mt-4 btn-primary"
          >Login to Continue</a
        >
      </div>
    </div>
  </div>
  <% } else { %>

  <div class="empty-cart">
    <div class="container mx-auto text-center">
      <h1 class="text-3xl font-bold mb-2">Empty CartðŸ›’</h1>
      <p class="text-gray-500 text-lg mb-12">
        You don't have any item in cart yet.<br />
        To order visit Home Page!
      </p>
      <img class="w-1/5 mx-auto" src="/img/empty3.jpg" alt="empty-cart" />
      <a href="/">
        <button
          class="px-6 py-2 rounded-full text-white font-bold mt-4 btn-primary"
        >
          Go Back
        </button>
      </a>
    </div>
  </div>
  <% } %>
</section>
